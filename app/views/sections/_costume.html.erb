<div class="costume col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <%= link_to(attachment_image_tag(costume, :image, :limit, 400, nil, {alt: costume.name, class: 'img-responsive'}), section_costume_path(costume.section_id, costume), class: 'thumbnail') %>
  <div class="overlay">
    <div class="overlay-bg"></div>
    <div class="section-title"><p><%= costume.name %></p></div>
  </div>
</div>