<div class="panel costume-variant">
  <div class="panel-heading" role="tab" id="Heading<%= costume_variant.id %>">
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#costume-variants-container" href="#Variant<%= costume_variant.id %>" aria-expanded="true" aria-controls="Variant<%= costume_variant.id %>">
        <%= costume_variant.name %>
      </a>
    </h4>
  </div>
  <div id="Variant<%= costume_variant.id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="Heading<%= costume_variant.id %>">
    <div class="panel-body">
      <div class="row">
        <%= render partial: 'costumes/costume_variant_image', collection: costume_variant.costume_variant_images %>
      </div>
    </div>
  </div>
</div>
