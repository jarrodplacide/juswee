<div class="section col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <%= link_to(attachment_image_tag(section, :image, :limit, 400, nil, {alt: section.section_name }), section_path(section), class: 'thumbnail') %>
  <div class="overlay">
    <div class="overlay-bg"></div>
    <div class="section-title"><p><%= section.section_name %></p></div>
  </div>
</div>